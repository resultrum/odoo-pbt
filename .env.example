# ============================================================================
# Odoo Template Configuration (.env)
# ============================================================================
# Copy this file to .env and customize for your project
# IMPORTANT: .env is in .gitignore - never commit with real credentials!
# ============================================================================

# ============================================================================
# ODOO REPOSITORY CONFIGURATION
# ============================================================================
# Configure which Odoo fork/version to use

# Enterprise: Use your partner account
# Community: Use official Odoo repository
ODOO_REPO_URL=git@github.com:resultrum/odoo.git
ODOO_REPO_BRANCH=18.0

# Optional: If using official Odoo Community (change the above)
# ODOO_REPO_URL=git@github.com:odoo/odoo.git
# ODOO_REPO_BRANCH=18.0

# ============================================================================
# PROJECT CONFIGURATION
# ============================================================================

PROJECT_NAME=odoo-pbt
MODULE_NAME=pbt_base
ORG_NAME=mycompany

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DB_HOST=db
DB_PORT=5432
DB_NAME=odoo
DB_USER=odoo
DB_PASSWORD=odoo_dev_password  # CHANGE IN PRODUCTION!

# PostgreSQL root password (for initial setup)
POSTGRES_PASSWORD=postgres_dev_password  # CHANGE IN PRODUCTION!

# ============================================================================
# ODOO CONFIGURATION
# ============================================================================

ODOO_ADMIN_PASSWORD=admin123  # CHANGE IN PRODUCTION!

# Odoo server configuration
ODOO_PORT=8069
ODOO_LONGPOLLING_PORT=8072

# Development mode
ODOO_DEV_MODE=1  # Set to 0 for production

# Addons path (usually doesn't need changing)
ADDONS_PATH=/mnt/extra-addons

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================

# Container registry (for building images)
DOCKER_REGISTRY=ghcr.io
DOCKER_ORG=resultrum

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# PyCharm debugging
PYCHARM_DEBUG=0  # Set to 1 to enable PyCharm debugger
PYCHARM_DEBUG_PORT=6100

# Verbose logging for development
LOG_LEVEL=debug

# ============================================================================
# PRODUCTION CONFIGURATION (use docker-compose.prod.yml)
# ============================================================================

# Production database (usually managed by Docker secrets)
PROD_DB_PASSWORD=use_docker_secrets  # Never hardcode in production

# Production Odoo admin password
PROD_ODOO_ADMIN_PASSWORD=use_docker_secrets  # Never hardcode in production

# Backup configuration
BACKUP_PATH=/backups/odoo
BACKUP_RETENTION_DAYS=30

# ============================================================================
# NOTES
# ============================================================================
#
# For SSH-based cloning (private repos):
# 1. Ensure your SSH key is added to ssh-agent:
#    ssh-add ~/.ssh/id_rsa
#
# 2. Start ssh-agent (usually automatic on macOS/Linux):
#    eval "$(ssh-agent -s)"
#
# 3. Docker will use SSH agent socket automatically in dev mode
#
# For PyCharm debugging:
# 1. Set PYCHARM_DEBUG=1
# 2. Run: python -m ptvsd --host 0.0.0.0 --port 6100 /opt/odoo/odoo-bin
# 3. Configure in PyCharm: Run → Edit Configurations → Python Debug Server
#
